<launch>
  <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
  <arg name="camera_name" default="camera" />
  <arg name="camera_frame" default="camera_frame" />
  <arg name="image_topic" default="image_raw" />
  <arg name="ns" />
  <arg name="less_tags" default="false" />
  <arg name="process_model" default="simple" />
  <arg if="$(arg less_tags)" name="tag_yaml_file" value="$(find mu_auv_localization)/config/less_tags_standalone.yaml" />
  <arg unless="$(arg less_tags)" name="tag_yaml_file" value="$(find mu_auv_localization)/config/tags_standalone.yaml" />

  <!-- Apriltag algorithm -->
  <node pkg="apriltag_ros"
        type="apriltag_ros_continuous_node"
        name="apriltag_node"
        clear_params="true"
        output="screen"
        launch-prefix="$(arg launch_prefix)">

    <rosparam command="load" file="$(find apriltag_ros)/config/settings.yaml" />
    <rosparam command="load" file="$(arg tag_yaml_file)" />
    <remap from="image_rect" to="$(arg camera_name)/$(arg image_topic)" />
    <param name="camera_frame" type="str" value="$(arg ns)/$(arg camera_frame)" />
    <param name="publish_tag_detections_image" type="bool" value="true" />
  </node>

  <!-- Start EKF Localization -->
  <node pkg="mu_auv_localization"
        type="vision_ekf_node"
        name="vision_ekf_node"
        clear_params="true"
        output="screen">
    <param name="calibration" type="str" value="gazebo" />
    <param name="measurement_model" type="str" value="dist"/>
    <param name="process_model" type="str" value="$(arg process_model)"/>
    <rosparam command="load" file="$(find mu_auv_localization)/config/tag_poses.yaml"/>
    <rosparam command="load" file="$(find mu_auv_localization)/config/params/ekf_distances_params.yaml"/>
  </node>

</launch>
