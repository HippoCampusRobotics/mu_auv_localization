<launch>
  <arg name="launch_prefix" default="" /> <!-- set to value="gdbserver localhost:10000" for remote debugging -->
  <arg name="node_namespace" default="apriltag_ros_continuous_node" />
  <arg name="camera_name" default="/camera" />
  <arg name="camera_frame" default="camera" />
  <arg name="image_topic" default="image_rect" />

  <!-- Set parameters test-->
  <rosparam command="load" file="$(find apriltag_ros)/config/settings.yaml" ns="$(arg node_namespace)" />
  <rosparam command="load" file="$(find apriltag_ros)/config/tags.yaml" ns="$(arg node_namespace)" />


    <!-- MAVROS_START-->
    <include file="$(find mavros)/launch/px4.launch">
        <arg name="fcu_url" value="udp://:14540@192.168.1.36:14557"/>
    </include>
      <!-- Image rectification -->
    <node name="image_proc" pkg="image_proc" type="image_proc" ns="$(arg camera_name)">
    </node>
        <!-- ENU_TO_NED-->
    <include file="$(find hippocampus_common)/launch/enu_to_ned.launch">
    </include>

    <!-- Barometer_gazebo -->
    <include file="$(find hippocampus_common)/launch/barometer_gazebo.launch">
    </include>

           <!-- Apriltag algorithm -->
    <node pkg="apriltag_ros" type="apriltag_ros_continuous_node" name="$(arg node_namespace)"  clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)" >
    <!-- Remap topics from those used in code to those on the ROS network -->
    <remap from="image_rect" to="$(arg camera_name)/$(arg image_topic)" />
    <remap from="camera_info" to="$(arg camera_name)/camera_info" />
    <param name="camera_frame" type="str" value="$(arg camera_frame)" />
    <param name="publish_tag_detections_image" type="bool" value="true" />   <!-- default: false -->
  </node>
<!-- Start EKF Localization -->
  <node pkg="mu_auv_localization" type="ekf_node.py" name="ekf_node" clear_params="true" output="screen" launch-prefix="$(arg launch_prefix)" >
    <param name="calibration" type="str" value="gazebo" /> <!-- either gazebo or water_tank -->
  </node>

</launch>